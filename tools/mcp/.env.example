# 腾讯云认证配置 (必需)
TENCENTCLOUD_SECRET_ID=your_secret_id_here
TENCENTCLOUD_SECRET_KEY=your_secret_key_here
TENCENTCLOUD_REGION=ap-beijing

# MCP服务器配置
MCP_HOST=0.0.0.0
MCP_PORT=8080
MCP_TRANSPORT=http
MCP_LOG_LEVEL=info
MCP_LOG_FORMAT=json

# 功能开关
MCP_ENABLE_TOOLS=true
MCP_ENABLE_LOGGING=true
MCP_ENABLE_RESOURCES=false
MCP_ENABLE_PROMPTS=false

# 超时配置
MCP_REQUEST_TIMEOUT=60s
MCP_TOOL_TIMEOUT=30s
MCP_READ_TIMEOUT=30s
MCP_WRITE_TIMEOUT=30s
MCP_IDLE_TIMEOUT=60s
MCP_SHUTDOWN_TIMEOUT=10s

# 认证配置 (可选)
# MCP_AUTH_ENABLED=false
# MCP_AUTH_TYPE=bearer
# MCP_AUTH_BEARER_TOKEN=your_bearer_token_here

# 性能配置
MCP_MAX_CONCURRENT_REQUESTS=100

# 工具配置
MCP_TOOL_CACHE=false
MCP_TOOL_CACHE_EXPIRY=5m